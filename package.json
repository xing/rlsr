{
  "name": "rlsr",
  "version": "4.0.6",
  "description": "create npm releses and changelogs from a multi repo",
  "main": "src/index.js",
  "bin": {
    "rlsr": "./bin/rlsr.js"
  },
  "publishConfig": {
    "registry": "http://registry.npmjs.com/"
  },
  "scripts": {
    "c": "git-cz",
    "rlsr": "node ./bin/rlsr4",
    "test": "yarn jest && yarn lint",
    "lint": "eslint .",
    "ts:watch": "yarn tsc --watch",
    "ts:compile": "yarn tsc",
    "prepack": "git clean -dfx && yarn && yarn run ts:compile",
    "postpublish": "git push"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/matthias-reis/rlsr.git"
  },
  "keywords": [
    "npm",
    "release",
    "changelog",
    "conventional-changelog"
  ],
  "author": "Matthias Reis",
  "license": "MIT",
  "devDependencies": {
    "@schemastore/package": "^0.0.6",
    "@types/chalk": "^2.2.0",
    "@types/conventional-commits-parser": "^3.0.1",
    "@types/cosmiconfig": "^6.0.0",
    "@types/eslint": "7.2.13",
    "@types/eslint-plugin-prettier": "3.1.0",
    "@types/glob": "^7.1.3",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.5",
    "@types/prettier": "2.3.0",
    "@types/ramda": "^0.27.42",
    "@types/semver": "^7.3.7",
    "@types/yargs": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "commitizen": "4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.29.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-standard": "^5.0.0",
    "jest": "^27.0.6",
    "prettier": "2.3.2",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "chalk": "^4.1.1",
    "conventional-commits-parser": "3.2.1",
    "cosmiconfig": "^7.0.0",
    "find-up": "^5.0.0",
    "glob": "7.1.7",
    "ramda": "0.27.1",
    "semver": "7.3.5",
    "simple-git": "^2.40.0",
    "yargs": "^17.0.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "rlsr": {
    "debug": true,
    "registry": "https://nexus.dc.xing.com/repository/npm-publish/"
  },
  "jest": {
    "preset": "ts-jest",
    "testPathIgnorePatterns": [
      "<rootDir>/build"
    ]
  }
}
